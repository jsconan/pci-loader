{
    "name": "pci-loader",
    "version": "1.2.0",
    "license": "MIT",
    "displayName": "PCI Loader",
    "description": "A scoped PCI Loader for modern web applications.",
    "author": "Jean-SÃ©bastien CONAN",
    "homepage": "https://jsconan.github.io/pci-loader/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jsconan/pci-loader.git"
    },
    "bugs": {
        "url": "https://github.com/jsconan/pci-loader/issues"
    },
    "keywords": [
        "QTI",
        "PCI",
        "IMS",
        "AMD",
        "loader"
    ],
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "files": [
        "dist",
        "CHANGELOG.md",
        "README.md",
        "LICENSE"
    ],
    "main": "dist/index.umd.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js"
        }
    },
    "scripts": {
        "dev": "vite --config vite.config.lib.ts",
        "build": "npm run build:lib && npm run build:static",
        "build:lib": "tsc && vite build --config vite.config.lib.ts",
        "build:static": "tsc && vite build --config vite.config.static.ts",
        "preview": "vite preview --config vite.config.static.ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "prettier --check . && eslint .",
        "lint:report": "eslint . --output-file eslint_report.json --format json",
        "test": "vitest run --config vite.config.lib.ts ",
        "test:watch": "vitest run --config vite.config.lib.ts --watch --coverage --coverage.reporter text",
        "test:coverage": "vitest run --config vite.config.lib.ts --coverage --coverage.reporter text",
        "test:report": "vitest run --config vite.config.lib.ts --coverage --coverage.reporter text --coverage.reporter html && open .coverage/index.html",
        "test:ci": "vitest run --config vite.config.lib.ts --coverage --coverage.reporter text --coverage.reporter clover",
        "prepack": "npm run lint && npm run test && npm run build",
        "prepare": "husky || true"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.2",
        "@eslint/js": "^9.34.0",
        "@humanspeak/svelte-markdown": "^0.8.11",
        "@rollup/plugin-terser": "^0.4.4",
        "@sveltejs/vite-plugin-svelte": "^6.1.3",
        "@types/node": "^24.3.0",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "sv-router": "^0.8.1",
        "svelte": "^5.38.6",
        "svelte-highlight": "^7.8.3",
        "terser": "^5.43.1",
        "typescript": "~5.9.2",
        "typescript-eslint": "^8.41.0",
        "vite": "^7.1.3",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-open-graph": "^2.0.6",
        "vite-plugin-static-copy": "^3.1.2",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "systemjs": "^6.15.1"
    }
}
